<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <style>
    /* 전체 페이지 스타일 */
    body {
      font-family: "Montserrat", sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* 상품 카드 스타일 */
    .box {
      display: flex;
      justify-content: space-between;
      width: 100%;
      max-width: 800px;
      border: 1px solid #ddd;
      padding: 20px;
      border-radius: 10px;

      margin-top: 100px;
    }

    /* 이미지 스타일 */
    .img img {
      width: 400px;
      aspect-ratio: 13/16;
      border-radius: 10px;
      object-fit: cover;
    }

    /* 상품명, 가격, 상세 내용 스타일 */
    .text {
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin-left: 20px;
      flex-grow: 1;
    }

    .name {
      font-size: 24px;
      font-weight: bold;
      margin-top: 10px;
    }

    .price {
      font-size: 20px;
      color: #ff7000;
      font-weight: bold;
      margin-top: 10px;
    }

    .detail {
      font-size: 16px;
      margin-top: 10px;
      color: #333;
    }

    /* 장바구니 버튼 */
    button {
      width: 100%;
      max-width: 400px;
      padding: 12px;
      margin-top: 15px;
      background-color: #ff8c42;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background-color: #ff7000;
    }

    button:active {
      background-color: #e66000;
    }

    /* 반응형 (모바일) */
    @media (max-width: 600px) {
      .box {
        flex-direction: column;
        align-items: center;
      }

      .img img {
        max-width: 100%;
      }

      .text {
        margin-left: 0;
        text-align: center;
      }

      button {
        max-width: 100%;
      }
    }

    /* 헤더 스타일 */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 30px;
      background-color: white;
      border-bottom: 1px solid #ddd;
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      z-index: 1000;
      max-width: 100vw; /* 화면 너비 초과 방지 */
      overflow: hidden; /* 넘치는 요소 숨김 */
      box-sizing: border-box;
    }

    /* 로고 스타일 */
    .header .logo {
      font-size: 22px;
      font-weight: 700;
      letter-spacing: 0.8px;
      white-space: nowrap; /* 줄바꿈 방지 */
      overflow: hidden;
      text-overflow: ellipsis;
    }

    /* 네비게이션 */
    .header .nav {
      display: flex;
      flex-grow: 1; /* 중앙 정렬 */
      justify-content: center;
      font-size: 16px;
      font-weight: 500;
    }

    /* 우측 아이콘 */
    .header .icon {
      display: flex;
      gap: 18px;
      font-size: 14px;
      white-space: nowrap; /* 줄바꿈 방지 */
    }

    .header .icon div {
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .header .icon div:hover {
      color: #ff8c42;
      transform: scale(1.1);
    }
    .mainPage {
      cursor: pointer;
    }
  </style>
  <body>
    <div class="header">
      <div class="logo">로고</div>
      <div class="mainPage" onclick="moveMain()">TimeMirror</div>
      <div class="icon">
        <div>로그인</div>
        <div onclick="moveCart()">장바구니</div>
      </div>
    </div>
    <div class="box">
      <div class="img"><img src="/uploads/<%= oneData[0].img%>" /></div>
      <div class="text">
        <div class="name"><%= oneData[0].name%></div>
        <br /><br /><br /><br /><br />
        <div class="price"><%= oneData[0].price%>원</div>
        <br /><br />
        <div class="detail"><%= oneData[0].detail%></div>
        <br /><br />
        <button onclick="cartIn('<%= oneData[0].userId%>')">
          장바구니 담기
        </button>
      </div>
    </div>
  </body>
  <script>
    const cartIn = (id) => {
      axios({
        method: "post",
        url: `/cart/set/${id}`,
      })
        .then((res) => {
          alert("담김");
          console.log("성공!");
        })
        .catch((e) => {
          console.log(e, "dsa");
        });
    };
    const moveMain = () => {
      window.location.href = "/";
    };

    const moveCart = () => {
      window.location.href = "/cart/all";
    };
  </script>
</html>

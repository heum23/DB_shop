<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <style>
    /* 전체 페이지 스타일 */
    body {
      font-family: "Montserrat", sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* 제품 등록 폼 스타일 */
    .setForm {
      width: 100%;
      max-width: 400px;
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 30px;
      margin-top: 100px;
    }

    .setForm form div {
      margin-bottom: 15px;
      font-size: 14px;
      font-weight: bold;
      color: #333;
    }

    .setForm input {
      width: 95%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
    }

    /* 버튼 스타일 */
    button {
      width: 100%;
      padding: 10px;
      background-color: #77360d;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background-color: #77360d;
    }

    button:active {
      background-color: #77360d;
    }

    /* 테이블 스타일 */
    table {
      width: 100%;
      max-width: 800px;
      background: white;
      border-collapse: collapse;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    thead {
      background-color: #77360d;
      color: white;
    }

    th,
    td {
      padding: 12px;
      text-align: center;
      border-bottom: 1px solid #ddd;
    }

    tbody tr:nth-child(even) {
      background-color: #f4f4f4;
    }

    tbody tr:hover {
      background-color: #ffe5d1;
    }

    /* 이미지 스타일 */
    td img {
      width: 60px;
      height: 60px;
      border-radius: 5px;
      object-fit: cover;
    }

    /* 반응형 (모바일) */
    @media (max-width: 600px) {
      table {
        font-size: 12px;
      }

      td img {
        width: 50px;
        height: 50px;
      }

      .setForm {
        max-width: 100%;
        padding: 15px;
      }
    }
    /* 헤더 스타일 */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 30px;
      background-color: white;
      border-bottom: 1px solid #ddd;
      position: fixed;
      width: 100%;
      top: 0;
      left: 0;
      z-index: 1000;
      max-width: 100vw; /* 화면 너비 초과 방지 */
      overflow: hidden; /* 넘치는 요소 숨김 */
      box-sizing: border-box;
    }

    /* 로고 스타일 */
    .header .logo {
      font-size: 22px;
      font-weight: 700;
      letter-spacing: 0.8px;
      white-space: nowrap; /* 줄바꿈 방지 */
      overflow: hidden;
      text-overflow: ellipsis;
    }

    /* 네비게이션 */
    .header .nav {
      display: flex;
      flex-grow: 1; /* 중앙 정렬 */
      justify-content: center;
      font-size: 16px;
      font-weight: 500;
    }

    /* 우측 아이콘 */
    .header .icon {
      display: flex;
      gap: 18px;
      font-size: 14px;
      white-space: nowrap; /* 줄바꿈 방지 */
    }

    .header .icon div {
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .header .icon div:hover {
      color: #ff8c42;
      transform: scale(1.1);
    }
    .mainPage {
      cursor: pointer;
    }
  </style>
  <body>
    <div class="header">
      <div class="logo">로고</div>
      <div class="mainPage" onclick="moveMain()">TimeMirror</div>
      <div class="icon">
        <div>로그인</div>
        <div onclick="moveCart()">장바구니</div>
      </div>
    </div>
    <div class="setForm">
      <form name="formData" enctype="multipart/form-data">
        <div>
          사진
          <input name="img" type="file" required />
        </div>
        <div>
          아이디
          <input name="userId" type="number" required />
        </div>
        <div>
          제품명
          <input name="name" type="text" required />
        </div>
        <div>
          가격
          <input name="price" type="text" required />
        </div>
        <div>
          상세설명
          <input name="detail" type="text" required />
        </div>
        <button onsubmit="setData(event)" type="submit">제품 등록</button>
      </form>
    </div>
    <table>
      <thead>
        <th>이미지</th>
        <th>제품명</th>
        <th>가격</th>
        <th>상세설명</th>
        <th>수정</th>
        <th>삭제</th>
      </thead>
      <tbody>
        <% allItem.forEach((item)=> { %>
        <tr>
          <td><img src="/uploads/<%=item.img%>" /></td>
          <td><%= item.name%></td>
          <td><%= item.price%></td>
          <td><%= item.detail %></td>
          <td>
            <button onclick="writeMove('<%= item.id%>')">수정</button>
          </td>
          <td><button onclick="delData('<%= item.userId%>')">삭제</button></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
  <script>
    const setData = (event) => {
      event.preventDefault();

      const formData = new FormData();
      const form = document.forms["formData"];
      formData.append("img", form["img"].files[0]); // 파일을 formData에 추가
      formData.append("userId", form["userId"].value);
      formData.append("name", form["name"].value);
      formData.append("price", form["price"].value);
      formData.append("detail", form["detail"].value);

      // axios로 데이터 전송
      axios
        .post("/shop/upload", formData) // formData를 직접 전달
        .then((response) => {
          window.location.reload();
        })
        .catch((error) => {
          console.error("Error occurred:", error);
        });
    };

    //수정
    const writeMove = (id) => {
      console.log(id);
      event.preventDefault();

      window.location.href = `/shop/write/${id}`;
    };
    //삭제
    const delData = (id) => {
      axios({
        method: "delete",
        url: `/shop/delete/${id}`,
      })
        .then((res) => {
          alert("삭제 완료");
          window.location.reload();
        })
        .catch((e) => {
          console.log("error", e);
        });
    };
    const moveMain = () => {
      window.location.href = "/";
    };

    const moveCart = () => {
      window.location.href = "/cart/all";
    };
  </script>
</html>
